<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0">

    <Button fx:id="getImage" text="Get Image" onAction="#onGetImage"/>
    <TextField fx:id="vehicleIdTextField"/>

    <RadioButton fx:id="interior" text="Interior View"/>
    <RadioButton fx:id="exterior" text="Exterior View"/>

    <CheckBox fx:id="roofOpenCheck" text="Roof Open"/>
    <CheckBox fx:id="nightCheck" text="Night View"/>
    <CheckBox fx:id="backgroundCheck" text="Background"/>
    <CheckBox fx:id="jpegCheck" text="jpeg"/>


    <ImageView fx:id="vehicleImage"/>

    <fx:define>
        <ArrayList fx:id="toggleUnits">
            <fx:reference source="interior"/>
            <fx:reference source="exterior"/>
        </ArrayList>
    </fx:define>


</GridPane>
